{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../build/main",
    "noImplicitAny": false,
    "allowJs": true,
    "types": ["node", "electron"]
  },
  "include": ["**/*.ts"],
  "exclude": ["../../build/main"]
}
